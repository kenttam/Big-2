extend layout
block script
  script(src="/javascripts/lib/angular.min.js")
  script(src="/javascripts/services.js")
  script(src="/javascripts/index.js")
block content
  .main-container
    p Welcome to Big 2!
    form(ng-controller="RoomController", ng-submit="requestRoom()")
      input(type="text", name="roomName", ng-model="roomName")
      button Join Room
  .game-container(ng-controller="GameController")
    ul(ng-repeat="player in players")
      li {{player.name}}
